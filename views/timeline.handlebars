<div id="writer" class="jumbotron">
    <form ic-post-to="./{{user}}/new" ic-target="#writer" ic-replace-target="true" role="form">
        <div class="form-group">
            <textarea type="text" name="content" id="content" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
    </form>
</div>
{{#each posts}}
    <div id="{{this.id}}" class="jumbotron">
        <p>{{date this.created_at}}</p><hr>
        <p>{{this.content}}</p>
        <a ic-get-from="./post/{{this.id}}" ic-target="#{{this.id}}" class="btn btn-warning" role="button">Edit</a>
        <a ic-delete-from="./delete/{{this.id}}" ic-confirm="Are you sure?" ic-target="#{{this.id}}" class="btn btn-danger" role="button">Delete</a>
    </div>
{{/each}}
<div id="loader" class="jumbotron">
    <a ic-get-from="./{{user}}?page=2" ic-target="#loader" ic-replace-target="true" class="btn btn-default btn-lg btn-block" role="button">Load More</a>
</div>
